{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "Input.Text",
			"id": "myComment",
			"label": "Comment (style: text)",
			"style": "text"
		},
        {
            "type": "Input.Text",
            "id": "myEmail",
            "placeholder": "john.doe@adaptivecards.io",
			"label": "Email Address (style: email)",
			"style": "email"
        },
		{
			"type": "Input.Text",
			"id": "myTel",
			"placeholder": "(555) 555-5555",
			"label": "Phone Number (style: tel)",
			"style": "tel"
		},
		{
			"type": "Input.Text",
			"id": "myUrl",
			"placeholder": "https://adaptivecards.io/",
			"label": "Link (style: url)",
			"style": "url"
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "OK"
		}
	]
}

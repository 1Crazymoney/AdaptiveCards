{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "Input.Text",
			"id": "input1",
			"label": "Enter name (required)",
			"isRequired": true,
			"errorMessage": "Name must not be blank",
			"maxLength": 50
		},
		{
			"type": "Input.Text",
			"id": "input2",
			"label": "Enter multiline comment",
			"maxLength": 500,
			"isMultiline": true
		},
		{
			"type": "Input.Text",
			"id": "input3",
			"label": "Enter another comment",
			"maxLength": 500,
			"isMultiline": true,
			"value": "This value was pre-filled"
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "Submit"
		}
	]
}
